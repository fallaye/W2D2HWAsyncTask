<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobileappscompany.w2d2hwasynctask.MainActivity">

    <TextView
        android:id="@+id/tvDisplayData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask"
        android:onClick="handlingMultithreading"/>

    <Button
        android:id="@+id/btnThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread"
        android:onClick="handlingMultithreading"/>

    <Button
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runnable"
        android:onClick="handlingMultithreading"/>

    <Button
        android:id="@+id/btnPoolThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PoolThread"
        android:onClick="handlingMultithreading"/>

    <Button
        android:id="@+id/btnRunOnUIThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RunOnUIThread"
        android:onClick="handlingMultithreading"/>

    <Button
        android:id="@+id/btnAsyncTaskLoader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTaskLoader"
        android:onClick="handlingMultithreading"/>

</LinearLayout>
